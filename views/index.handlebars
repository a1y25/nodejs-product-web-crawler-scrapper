<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<div class="container">
	{{#each products}}
		<h3><a href="{{this.link}}" target="_blank"> {{this.source}}</a></h1>
		<ul>
			{{#each this.items}}
				<li>
					<a href="{{this.link}}" target="_blank">
						{{#if this.picture}} <img src="{{this.picture}}" width="50">{{/if}}
						{{this.title}}
					</a> - <span class="text-danger"> {{this.date}}</span>
					<hr>
				</li>
			{{/each}}
		</ul>
		<hr>
    {{/each}}
</div>